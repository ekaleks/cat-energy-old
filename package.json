{
  "name": "cat-energy",
  "version": "14.0.0",
  "private": true,
  "description": "Личный проект «Кэт энерджи» от HTML Academy",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "1.x",
    "autoprefixer": "^9.8.8",
    "grunt": "^1.5.3",
    "grunt-browser-sync": "^2.2.0",
    "grunt-contrib-clean": "^2.0.1",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-imagemin": "^4.0.0",
    "grunt-contrib-less": "^3.0.0",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-csscomb": "^4.2.0",
    "grunt-csso": "^2.2.1",
    "grunt-cwebp": "^3.0.3",
    "grunt-juwain-posthtml": "^0.6.0",
    "grunt-postcss": "^0.9.0",
    "grunt-posthtml": "^0.5.0",
    "grunt-svgstore": "^2.0.0",
    "load-grunt-tasks": "^5.1.0",
    "posthtml-include": "^1.2.0",
    "stylelint": "^14.9.1",
    "stylelint-config-htmlacademy": "0.1.x"
  },
  "overrides":{
	"semver-regex": "3.1.4",
	"trim-newlines": "3.0.1",
    "deep-extend": "0.5.1",
    "glob-parent": "5.1.2",
    "merge": "2.1.1",
    "nth-check": "2.0.1",
    "minimist": "1.2.6",
	"postcss": "7.0.36"
}, 
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/less/**/*.less\" --syntax less",
    "test": "npm run editorconfig && npm run stylelint",
    "build": "grunt build",
    "start": "npm run build && grunt serve"
  },
  "browserslist": [
    "last 2 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/less/**/*.less"
  ],
  "engines": {
    "node": "16.15.0"
  },
  "dependencies": {
    "cssnano": "^5.1.11",
    "normalize.css": "^8.0.0",
    "pixrem": "^5.0.0"
  }
}
